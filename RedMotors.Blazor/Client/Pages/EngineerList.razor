@page "/engineerlist"
@inject HttpClient httpClient

<h3>Engineer List</h3>

<input @bind=engineerName placeholder="Type Name..."/>
<input @bind=engineerSurname placeholder="Type Surname..."/>
<input @bind=engineerSalaryPerMonth placeholder="Type Salary Per Month..."/>
<button class="btn btn-primary" @onclick="AddEngineer">Add New Engineer</button>
@if (isLoading)
{
    <p>Loading ...</p>
}else{
<table class="table table-striped table-hover">
    <thead>
        <tr>
            @*<th>ID</th>*@
            <th>Name</th>
            <th>Surname</th>
            <th>SalaryPerMonth</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var engineer in engineerList)
        {
            <tr>
                @*<td>@manager.Id</td>*@
                <td><input value="@engineer.Name" @onchange="(m)=> NameChanged(m, engineer)"/></td>
                <td><input value="@engineer.Surname" @onchange="(m)=> SurnameChanged(m, engineer)" /></td>
                <td><input value="@engineer.SalaryPerMonth" @onchange="(m)=> SalaryPerMonthChanged(m, engineer)"/></td>
                <td><button class="btn btn-danger" @onclick="(m) => DeleteEngineer(m, engineer)">Delete</button></td>
            </tr>
        }
    </tbody>
</table>
}
